        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api/community"
        },
        {
            "key": "user_id",
            "value": "your_user_id"
        },
        {
            "key": "post_id",
            "value": "your_post_id"
        },
        {
            "key": "comment_id",
            "value": "your_comment_id"
        },
        {
            "key": "image_file",
            "value": "your_image_file_path"
        },
        {
            "key": "new_image_file",
            "value": "your_new_image_file_path"
        }
    ]
