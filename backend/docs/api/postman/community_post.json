{
    "info": {
        "name": "Community Post API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Posts",
            "item": [
                {
                    "name": "Get Post List",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"page\": 1,\n    \"page_size\": 10,\n    \"user_id\": \"{{user_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/posts/list/",
                            "host": ["{{base_url}}"],
                            "path": ["posts", "list", ""]
                        },
                        "description": "获取帖子列表，支持分页"
                    }
                },
                {
                    "name": "Create Post",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user_id\": \"{{user_id}}\",\n    \"title\": \"测试帖子\",\n    \"content\": \"这是一个测试帖子内容\",\n    \"image\": \"{{image_file}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/posts/create/",
                            "host": ["{{base_url}}"],
                            "path": ["posts", "create", ""]
                        },
                        "description": "创建新帖子"
                    }
                },
                {
                    "name": "Get Post Detail",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"post_id\": \"{{post_id}}\",\n    \"user_id\": \"{{user_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/posts/detail/",
                            "host": ["{{base_url}}"],
                            "path": ["posts", "detail", ""]
                        },
                        "description": "获取帖子详情"
                    }
                },
                {
                    "name": "Update Post",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"post_id\": \"{{post_id}}\",\n    \"title\": \"更新后的标题\",\n    \"content\": \"更新后的内容\",\n    \"image\": \"{{new_image_file}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/posts/update/",
                            "host": ["{{base_url}}"],
                            "path": ["posts", "update", ""]
                        },
                        "description": "更新帖子"
                    }
                },
                {
                    "name": "Delete Post",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"post_id\": \"{{post_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/posts/delete/",
                            "host": ["{{base_url}}"],
                            "path": ["posts", "delete", ""]
                        },
                        "description": "删除帖子"
                    }
                }
            ]
        },
